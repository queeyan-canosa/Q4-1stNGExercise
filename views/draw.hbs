    <link rel="icon" type="image/x-icon" href="favicon.ico">
</head>

<body>
    <!-- Navigation (Stays on Top) -->
    <div class="w3-top w3-bar w3-black">
        <a href="/" class="w3-bar-item w3-button">Input</a>
        <a href="/draw" class="w3-bar-item w3-button">Draw</a>
    </div>

    <!-- Start Content -->
    <div id="home" class="w3-container w3-content w3-padding-64">
        <h2>Triangle with Side {{sideA}} and {{sideB }} </h2>
        <canvas class=" w3-white" id="mycanvas" width="100" height="100"> 
          <!-- do not remove, this defines the drawing area/canvas with size of 100 by 100 -->
        </canvas>
    </div>
    <footer class="w3-padding-large"> &copy; 2024 Q. Canosa</footer>

    <script>

        function drawTriangle() {

            // sample use of handlbars 
            const sideA = parseFloat(document.getElementById("sideA").value);
            const sideB = parseFloat(document.getElementById("sideB").value);

            // Validate user inputs
            if (isNaN(sideA) || isNaN(sideB) || sideA <= 0 || sideB <= 0) {
                alert("Please enter valid positive numbers for both sides.");
                return;
            }
            const hypotenuse = Math.sqrt(sideA ** 2 + sideB ** 2).toFixed(2);

            let canvas = document.getElementById("mycanvas");
            let ctx = canvas.getContext("2d");
            ctx.clearRect(0, 0, canvas.width, canvas.height);

            const scale = 2;
            const offsetX = 50;
            const offsetY = 450;

            // Draw triangle
            ctx.beginPath();
            ctx.moveTo(offsetX, offsetY); // Start point
            ctx.lineTo(offsetX + sideA / scale, offsetY); // Draw base
            ctx.lineTo(offsetX, offsetY - sideB / scale); // Draw height
            ctx.closePath();
            ctx.stroke();

            // Add labels
            ctx.fillStyle = "black";
            ctx.font = "14px Arial";
            ctx.fillText(`Side A: ${sideA}`, offsetX + sideA / (2 * scale) - 20, offsetY + 20); // Base label
            ctx.fillText(`Side B: ${sideB}`, offsetX - 60, offsetY - sideB / (2 * scale)); // Height label
            ctx.fillText(`Hypotenuse: ${hypotenuse}`, offsetX + sideA / (2 * scale) - 20, offsetY - sideB / (2 * scale) - 10); // Hypotenuse label
        }

        drawTriangle(); // call the call function
    </script>


</body>

</html>
